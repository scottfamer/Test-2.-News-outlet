{
  "name": "ai-breaking-news",
  "version": "1.0.0",
  "description": "AI-powered breaking news outlet with real-time updates",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "dev:server": "tsx watch server/index.js",
    "dev:client": "vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "tsc -p tsconfig.server.json && cp server/index.js dist/server/index.js",
    "build:client": "vite build",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/index.js",
    "scrape": "tsx server/scripts/runScraper.ts",
    "reseed-sources": "tsx server/scripts/reseedSources.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sql.js": "^1.10.3",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "rss-parser": "^3.13.0",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "dotenv": "^16.3.1",
    "date-fns": "^3.0.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/sql.js": "^1.4.9",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0"
  }
}
